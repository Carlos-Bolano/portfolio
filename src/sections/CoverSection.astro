---
import { HeroTexts } from "../constans";
---

<section class="Cover" id="home">
  <article class="Cover-content">
    <div class="Cover-left">
      {
        HeroTexts.map((text) => (
          <>
            <h1 class="Cover-h1">{text.role}</h1>
            <h2 class="Cover-name">{text.name}</h2>
            <p class="Cover-paragraph">
              {text.description}
              <br /> in <span class="typed decoration" />
            </p>
            <div class="Cover-btns">
              <a
                class="btn Cover-contact-btn"
                title="contact-btn"
                href="#contact"
              >
                Contact Me
              </a>
              <a class="btn2 Cover-download-btn" title="download-btn" href="/public/cv.pdf" download>
                Download CV
              </a>
            </div>
          </>
        ))
      }
    </div>
    <div class="Cover-right">
      <svg
        class="Cover-wave"
        viewBox="0 0 500 500"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        width="100%"
        id="blobSvg"
      >
        <path id="blob" fill="#ffbd06">
          <animate
            attributeName="d"
            dur="13s"
            repeatCount="indefinite"
            values="M416,322.5Q395,395,322.5,417.5Q250,440,178,417Q106,394,90,322Q74,250,81.5,169.5Q89,89,169.5,61Q250,33,328,63.5Q406,94,421.5,172Q437,250,416,322.5Z;
                        M431,323Q396,396,323,432.5Q250,469,168,441.5Q86,414,64.5,332Q43,250,81.5,185Q120,120,185,71Q250,22,317.5,68.5Q385,115,425.5,182.5Q466,250,431,323Z;
                        M422,329.5Q409,409,329.5,407Q250,405,164.5,413Q79,421,66,335.5Q53,250,80,178.5Q107,107,178.5,61.5Q250,16,332,51Q414,86,424.5,168Q435,250,422,329.5Z;                              
                        M425.5,335.5Q421,421,335.5,429Q250,437,187,406.5Q124,376,66,313Q8,250,57,178Q106,106,178,65Q250,24,332,55Q414,86,422,168Q430,250,425.5,335.5Z;
                        M424.5,319.5Q389,389,319.5,418.5Q250,448,186,413Q122,378,96.5,314Q71,250,90,179.5Q109,109,179.5,85.5Q250,62,315.5,90.5Q381,119,420.5,184.5Q460,250,424.5,319.5Z;
                        M416,322.5Q395,395,322.5,417.5Q250,440,178,417Q106,394,90,322Q74,250,81.5,169.5Q89,89,169.5,61Q250,33,328,63.5Q406,94,421.5,172Q437,250,416,322.5Z;"
          >
          </animate>
        </path>
      </svg>
      <img
        class="Cover-img"
        src="assets/images/carlos-bolaño.webp"
        width="300"
        height="300"
        alt="Carlos Bolaños"
      />
    </div>
  </article>
</section>

<style>
  .Cover {
    margin: 75px 0px;
  }
  .Cover-content {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    justify-content: space-between;
    align-items: center;
    height: 80vh;
  }
  .Cover-left {
    grid-column: 1/5;
  }
  .Cover-h1 {
    font-size: 2.3125rem;
    color: var(--text-color);
    font-weight: 300;
    margin-bottom: 10px;
  }
  .Cover-name {
    color: var(--Yellow-color);
    font-size: 70px;
    font-weight: 700;
    line-height: 40px;
    text-align: left;
  }
  .Cover-paragraph {
    margin-top: 20px;
    font-size: 20px;
  }
  .Cover-btns {
    margin-top: 30px;
    display: flex;
    align-items: center;
    gap: 20px;
  }
  .Cover-right {
    border-radius: 50%;
    width: 420px;
    height: 420px;
    grid-column: 5/-1;

    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  .Cover-wave {
    position: absolute;
    height: 480px;
    width: 480px;
    top: -25px;
    right: -30px;
    z-index: -2;
  }
  .Cover-img {
    border-radius: 50%;
    object-fit: cover;
    cursor: pointer;
    width: 300px;
    height: 300px;
    margin: 50px;
  }

  /* RESPONSIVE DESIGN */

  @media (max-width: 1129px) {
    .Cover-content br {
      display: none;
    }
  }

  @media (max-width: 990px) {
    .Cover-h1 {
      font-size: 30px;
    }
    .Cover-name {
      font-size: 60px;
    }
    .Cover-paragraph {
      font-size: 18px;
    }
  }

  @media (max-width: 930px) {
    .Cover-paragraph {
      max-width: 320px;
    }
  }

  @media (max-width: 905px) {
    .Cover-name {
      font-size: 50px;
    }
    .Cover-h1 {
      font-size: 27px;
    }
  }

  @media (max-width: 838px) {
    .Cover-content {
      display: flex;
      flex-direction: column;
      flex-direction: column-reverse;
      justify-content: center;
      height: max-content;
    }

    .Cover-content br {
      display: none;
    }

    .Cover-left {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .Cover-h1 {
      font-size: 1.5625em;
      color: var(--text-color);
    }

    .Cover-paragraph {
      font-size: 17px;
      text-align: center;
      max-width: 300px;
    }

    .Cover-btns {
      justify-content: center;
    }
    .Cover-btns a {
      font-size: 15px;
      padding: 10px 20px;
    }
  }

  @media (max-width: 411px) {
    .Cover-content br {
      display: none;
    }

    .Cover-name {
      font-size: 43px;
    }

    .Cover-paragraph {
      font-size: 18px;
      text-align: center;
      max-width: 320px;
    }

    .Cover-btns {
      justify-content: center;
    }
    .Cover-btns a {
      font-size: 14px;
      padding: 10px 15px;
    }
  }
</style>
